{
  "name": "moxy-proxy",
  "version": "0.99.9",
  "description": "Proxy server for mocking client application",
  "main": "server/index.ts",
  "repository": "git@github.com:G3F4/moxy-proxy.git",
  "homepage": ".",
  "author": "G3F4 <kamil.grabek@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "yarn run:server",
    "run:server": "node dist/server",
    "host:client": "http-server -c-1 dist/public",
    "test": "NODE_ENV=test yarn run test:e2e",
    "test:e2e": "yarn test:data:init;NODE_ENV=test testcafe chrome:headless __tests__/*.test.* --skip-js-errors --app 'NODE_ENV=test yarn test:e2e:app' --app-init-delay 10000; yarn test:data:cleanup",
    "test:e2e:local": "yarn test:data:init;testcafe chrome __tests__/*.test.* --skip-js-errors --app 'NODE_ENV=test yarn test:e2e:app'  --app-init-delay 10000; yarn test:data:cleanup",
    "test:e2e:local:single": "yarn test:data:init;NODE_ENV=test testcafe chrome __tests__/serverState.test.ts --skip-js-errors --app 'NODE_ENV=test yarn test:e2e:app'  --app-init-delay 10000; yarn test:data:cleanup",
    "test:e2e:local:with-build": "yarn test:data:init;testcafe chrome __tests__/*.test.* --skip-js-errors --app 'NODE_ENV=test yarn test:e2e:app'  --app-init-delay 10000; yarn test:data:cleanup",
    "test:e2e:local:single:with-build": "yarn test:data:init;NODE_ENV=test testcafe chrome __tests__/serverState.test.ts --skip-js-errors --app 'NODE_ENV=test yarn test:e2e:app'  --app-init-delay 10000; yarn test:data:cleanup",
    "test:e2e:remote": "APP_URL=https://g3f4.github.io/moxy-proxy/ testcafe chrome __tests__/e2e.test.* --skip-js-errors",
    "test:e2e:app": "npm-run-all -p -r run:server host:client",
    "test:data:init": "yarn test:data:cleanup && mkdirp __testsData__/data && cp -a __testsData__/initial/* __testsData__/data",
    "test:data:cleanup": "rm -rf __testsData__/data",
    "test:client": "react-scripts test",
    "build": "yarn build:clean;npm-run-all -p build:client build:server",
    "build:client": "react-scripts build;mv build dist/public",
    "build:server": "tsc -p tsconfig.server.prod.json",
    "build:staging": "env-cmd -f .env.staging yarn build",
    "build:clean": "rm -rf dist;mkdirp dist",
    "dev": "env-cmd -f .env.development npm-run-all -p -r dev:server dev:client",
    "dev:server": "ts-node-dev --project tsconfig.server.dev.json --watch server --respawn --transpileOnly server/index.ts",
    "dev:client": "PORT=8888 react-scripts start",
    "lint": "eslint './**/*.{ts,tsx}'",
    "lint:fix": "eslint './**/*.{ts,tsx}' --fix",
    "predeploy": "yarn build:client",
    "client:deploy:gh-pages": "gh-pages -d dist/public"
  },
  "proxy": "http://localhost:5000",
  "dependencies": {
    "@types/mkdirp": "1.0.1",
    "@types/node": "14.10.3",
    "@types/parseurl": "1.3.1",
    "@types/rimraf": "3.0.0",
    "dotenv": "8.2.0",
    "fastify": "3.4.1",
    "fastify-cors": "4.1.0",
    "fastify-websocket": "2.0.7",
    "immer": "7.0.9",
    "maketypes": "1.1.2",
    "parseurl": "1.3.3",
    "rimraf": "3.0.2",
    "ts-node": "9.0.0",
    "typescript": "4.0.3"
  },
  "devDependencies": {
    "@material-ui/core": "4.9.0",
    "@material-ui/icons": "4.5.1",
    "@material-ui/lab": "4.0.0-alpha.40",
    "@monaco-editor/react": "3.0.1",
    "@testing-library/jest-dom": "4.2.4",
    "@testing-library/react": "9.3.2",
    "@testing-library/user-event": "7.1.2",
    "@types/jest": "26.0.14",
    "@types/react": "16.9.49",
    "@types/react-dom": "16.9.0",
    "@types/react-syntax-highlighter": "11.0.4",
    "env-cmd": "^10.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-testcafe": "0.2.1",
    "gh-pages": "3.1.0",
    "http-server": "0.12.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-json-view": "1.19.1",
    "react-monaco-editor": "0.33.0",
    "react-prism": "4.3.2",
    "react-scripts": "3.4.3",
    "react-syntax-highlighter": "13.5.3",
    "testcafe": "1.9.3",
    "ts-jest": "26.4.0",
    "ts-node-dev": "1.0.0-pre.44"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
